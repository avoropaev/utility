{% extends 'base.html.twig' %}

{% block title %}{{ site.name }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('utility.clients') }}">Clients</a></li>
        <li class="breadcrumb-item"><a href="{{ path('utility.clients.client.show', {'id': site.client.id}) }}">{{ site.client.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('utility.clients.client.sites', {'client_id': site.client.id}) }}">Sites</a></li>
        <li class="breadcrumb-item active">{{ site.name }}</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-6">
            <div class="box">
                <table class="table table-bordered mb-4">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ site.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ site.name }}</td>
                    </tr>
                    <tr>
                        <th>Client</th>
                        <td><a href="{{ path('utility.clients.client.show', {'id': site.client.id}) }}">{{ site.client.name }}</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">Product Groups</div>
                <div class="card-body pt-0 pb-0">
                    <table class="table table-responsive-sm mb-0">
                        <thead>
                            <tr>
                                <th class="b-t-0">ID</th>
                                <th class="b-t-0">Name</th>
                                <th class="b-t-0">GUID</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product_group in site.productGroups %}
                                <tr>
                                    <td>{{ product_group.id }}</td>
                                    <td><a href="{{ path('utility.clients.product_groups.show', {'id': product_group.id}) }}">{{ product_group.name }}</a></td>
                                    <td>{{ product_group.guid }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Not found.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
